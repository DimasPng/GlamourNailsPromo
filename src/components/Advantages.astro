---
import {Image} from 'astro:assets'
import disposable from '../assets/images/mainPage/disposable.svg'
import guarantee from '../assets/images/mainPage/guarantee.svg'
import topMasters from '../assets/images/mainPage/top-masters.svg'
---
<section class="bg-neutral-50 dark:bg-gray-900">
    <div class="container flex flex-col sm:flex-row mx-auto justify-between lg:w-[950px] xl:w-[1100px] 2xl:w-[1380px] md:px-6 lg:p-0 2xl:pl-[5.5rem]">
        <div class="text-center mb-5 sm:mb-0">
            <Image src={disposable} alt="Jednorazowe materiały" class="mx-auto mb-4 size-25 sm:size-28 md:size-32"/>
            <span class="text-neutral-600 dark:text-white text-2xl 2xl:text-3xl">Jednorazowe materiały</span>
        </div>
        <div class="text-center mb-5 sm:mb-0">
            <Image src={guarantee} alt="Gwarancja na pokrycie" class="mx-auto mb-4 size-25 sm:size-28 md:size-32"/>
            <span class="text-neutral-600 dark:text-white text-2xl 2xl:text-3xl">Gwarancja na pokrycie</span>
        </div>
        <div class="text-center">
            <Image src={topMasters} alt="Najlepsi mistrzowie" class="mx-auto mb-4 size-25 sm:size-28 md:size-32"/>
            <span class="text-neutral-600 dark:text-white text-2xl 2xl:text-3xl">Najlepsi mistrzowie</span>
        </div>
    </div>
</section>