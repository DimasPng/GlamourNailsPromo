---
import {Image} from 'astro:assets'
import rectangle from '../assets/images/mainPage/rectangle.avif'
import map from '../assets/images/mainPage/map.avif'
import CEA from '../assets/images/mainPage/CEA.png'
---

<footer class="2xl:h-dvh">
    <div class="flex items-center justify-around mx-auto flex-col sm:flex-row relative">
        <div class="sm:w-1/2">
            <Image class="w-full" src={rectangle} alt="Rectangle"/>
        </div>
        <div class="sm:w-1/2 hidden sm:block">
            <Image class="w-full" src={map} alt="Map"/>
        </div>
        <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 sm:left-1/4">
            <Image class="size-28 md:size-44 lg:size-52 mb-2 lg:mb-10" src={CEA} alt="Quality mark"/>
            <h2 class="text-white mb-2 lg:mb-10 text-xl lg:text-2xl 2xl:text-4xl font-semibold">SALON PIĘKNOŚCI LEVIRIN</h2>
            <div class="text-white text-sm sm:text-xs lg:text-xl 2xl:text-2xl mb-2 lg:mb-10 leading-6">
                <h3>Generała Romualda Traugutta 95, 50-417 Wrocław</h3>
                <h3>Godziny otwarcia: 08:00 - 21:00 </h3>
                <h3>Telefon: +48 (517) 359-446</h3>
            </div>
            <button class="w-[200px] h-10 text-center lg:text-xl rounded-2xl text-white bg-pink-600"
            type="submit">Zapisać się</button>
         </div>
    </div>
</footer>