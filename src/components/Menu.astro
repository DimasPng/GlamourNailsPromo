---
import { Image } from 'astro:assets'
import LogoMax from '../assets/images/mainPage/LogoMax.png'
---

<nav class="h-24 dark:bg-gray-900 bg-white fixed z-30 opacity-90 shadow-2xl w-full">
  <div class="w-full mx-auto px-6 xl:pl-16 container">
    <div class="flex items-center justify-start h-24">
      <div class="relative group">
        <button type="button" class="bg-white dark:bg-gray-900 p-2 inline-flex items-center justify-center rounded-md text-black dark:text-white">
          <span class="sr-only">Open main menu</span>
          <svg class="block h-10 w-10 lg:h-14 lg:w-14" fill="none" viewBox="0 0 20 24" stroke="currentColor" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
          <svg class="hidden h-4 w-4" fill="none" viewBox="0 0 10 10" stroke="currentColor" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>
      <div class="flex-shrink-0 px-2">
        <Image class="h-12 w-12 rounded-lg lg:h-14 lg:w-14" src={LogoMax} alt="LogoMenu">
      </div>
      <div class=" text-black dark:text-white lg:text-sm leading-none flex items-center">LEVIRIN<br>studio urody</div>
      <div class="flex justify-center ml-auto">
        <div class="hidden md:block ">
          <a href="#" class="text-black hover:bg-pink-700 hover:text-white px-2 lg:px-4 mx-4 py-2 rounded-3xl text-sm lg:text-lg dark:text-white">CENNIK</a>
          <a href="#" class="text-black hover:bg-pink-700 hover:text-white px-2 lg:px-4 mx-4 py-2 rounded-3xl text-sm lg:text-lg dark:text-white">AKCJE</a>
          <a href="#" class="text-black hover:bg-pink-700 hover:text-white px-2 lg:px-4 mx-4 py-2 rounded-3xl text-sm lg:text-lg dark:text-white">OPINIE</a>
          <button class="w-[200px] h-10 2xl:h-14 2xl:w-[250px] lg:mx-4 text-center lg:text-lg 2xl:text-2xl rounded-3xl text-white max-sm: bg-pink-700 dark:bg-pink-700 dark:hover:bg-pink-600 hover:bg-pink-500 hover:shadow hover:cursor-pointer transform transition-transform hover:-translate-y-1"
            type="submit">Zapisać się</button>
        </div>
      </div>
    </div> 
  </div>
</nav>










  




  


