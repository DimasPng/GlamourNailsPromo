---
import {Image} from 'astro:assets'
import review1 from '../assets/images/mainPage/review1.png'
import review2 from '../assets/images/mainPage/review2.png'
import review3 from '../assets/images/mainPage/review3.png'
import review4 from '../assets/images/mainPage/review4.png'
import review5 from '../assets/images/mainPage/review5.png'
import review6 from '../assets/images/mainPage/review6.png'
import play from '../assets/images/mainPage/play.png'
import line from '../assets/images/mainPage/line.png'
--- 
<section id="reviews" class=" dark:bg-gray-900 p-6">
    <div class="flex flex-col items-center justify-around sm:flex-row mx-auto sm:justify-between lg:w-[950px] xl:w-[1100px] 2xl:w-[1200px]">
        <div class="flex flex-col items-center sm:items-start">
            <span class="text-neutral-600 text-center 2xl:my-3 sm:text-left font-semibold text-lg sm:text-xl lg:text-2xl leading-tight dark:text-white mb-2">74% naszych klientek<br/>przychodzi z polecenia.</span>
            <Image class="mb-6 w-1/2" src={line} alt="Line"/>
        </div>
        <a href="https://www.instagram.com/" target="_blank" class="transition font-pt-sans uppercase text-white text-sm xl:text-lg flex justify-center items-center p-2 w-36 xl:w-40 bg-pink-600 dark:bg-pink-700 dark:hover:bg-pink-600 hover:bg-pink-500 hover:-translate-y-1 shadow-md rounded-2xl max-sm:mb-5">Instagram</a>
    </div>
    <div class="flex flex-wrap items-center mx-auto lg:w-[950px] xl:w-[1100px] 2xl:w-[1200px]">
        <div class="p-1 flex justify-start relative w-1/2 sm:w-1/3 2xl:mb-11">
            <Image class="w-auto h-auto" src={review1} alt="Video review1"/>
            <a href="https://www.instagram.com/" target="_blank">
                <Image class="size-10 sm:size-14 md:size-20 lg:size-24 xl:size-28 2xl:size-32 absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2" src={play} alt="Video button"/>
            </a>
        </div>
        <div class="p-1 flex justify-center relative w-1/2 sm:w-1/3 2xl:mb-11">
            <Image class="w-auto h-auto" src={review2} alt="Video review2"/>
            <a href="https://www.instagram.com/" target="_blank">
                <Image class="size-10 sm:size-14 md:size-20 lg:size-24 xl:size-28 2xl:size-32 absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2" src={play} alt="Video button"/>
            </a>
        </div>
        <div class="p-1 flex justify-end relative w-1/2 sm:w-1/3 2xl:mb-11">
            <Image class="w-auto h-auto" src={review3} alt="Video review3"/>
            <a href="https://www.instagram.com/" target="_blank">
                <Image class="size-10 sm:size-14 md:size-20 lg:size-24 xl:size-28 2xl:size-32 absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2" src={play} alt="Video button"/>
            </a>
        </div>
        <div class="p-1 flex justify-start relative w-1/2 sm:w-1/3">
            <Image class="w-auto h-auto" src={review4} alt="Video review4"/>
            <a href="https://www.instagram.com/" target="_blank">
                <Image class="size-10 sm:size-14 md:size-20 lg:size-24 xl:size-28 2xl:size-32 absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2" src={play} alt="Video button"/>
            </a>
        </div>
        <div class="p-1 flex justify-center relative w-1/2 sm:w-1/3">
            <Image class="w-auto h-auto" src={review5} alt="Video review5"/>
            <a href="https://www.instagram.com/" target="_blank">
                <Image class="size-10 sm:size-14 md:size-20 lg:size-24 xl:size-28 2xl:size-32 absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2" src={play} alt="Video button"/>
            </a>
        </div>
        <div class="p-1 flex justify-end relative w-1/2 sm:w-1/3">
            <Image class="w-auto h-auto" src={review6} alt="Video review6"/>
            <a href="https://www.instagram.com/" target="_blank">
                <Image class="size-10 sm:size-14 md:size-20 lg:size-24 xl:size-28 2xl:size-32 absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2" src={play} alt="Video button"/>
            </a>
        </div>
    </div>
</section>